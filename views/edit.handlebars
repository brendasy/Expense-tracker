<div class="container">
  <div class="row">
    <div class="col-sm-10 col-10 col-md-8 mx-auto">
      <form action="/record/{{record._id}}?_method=PUT" method="POST">

        {{!-- 名稱 --}}
        <div class="form-group row">
          <label class="col-12 col-sm-3 col-form-label text-sm-left" for="name"> 消費名稱 </label>
          <div class="col-12 col-sm-8 col-lg-6">
            <input class="form-control" id="name" name="name" type="text" placeholder="消費名目" value="{{record.name}}"
              required>
          </div>
        </div>
        {{!-- 日期 --}}
        <div class="form-group row">
          <label class="col-12 col-sm-3 col-form-label text-sm-left"> 日期 </label>
          <div class="col-12 col-sm-8 col-lg-6">
            <div class="docs-datepicker">
              <div class="input-group">
                <input type="text" class="form-control" data-toggle="datepicker" id="date" name="date"
                  value="{{record.date}}" required>
                <div class="input-group-append">
                  <label class="input-group-text docs-datepicker-trigger" for="date" disabled="">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{!-- 類型 --}}
        <div class="form-group row pt-1 pb-1">
          <label class="col-12 col-sm-3 col-form-label text-sm-left"> 類別 </label>
          <div class="col-12 col-sm-8 col-lg-6 form-check mt-1">
            <label class="custom-control custom-radio custom-control-inline">
              <input class="custom-control-input" type="radio" name="category" value="{{record.category}}"
                checked=""><span class="custom-control-label">家居物業</span>
            </label>
            <label class="custom-control custom-radio custom-control-inline">
              <input class="custom-control-input" type="radio" name="category" value="{{record.category}}"><span
                class="custom-control-label">交通出行</span>
            </label>
            <label class="custom-control custom-radio custom-control-inline">
              <input class="custom-control-input" type="radio" name="category" value="{{record.category}}"><span
                class="custom-control-label">休閒娛樂</span>
            </label>
            <label class="custom-control custom-radio custom-control-inline">
              <input class="custom-control-input" type="radio" name="category" value="{{record.category}}"><span
                class="custom-control-label">餐飲食品</span>
            </label>
            <label class="custom-control custom-radio custom-control-inline">
              <input class="custom-control-input" type="radio" name="category" value="{{record.category}}"><span
                class="custom-control-label">其他</span>
            </label>
          </div>
        </div>
        {{!-- 店家 --}}
        <div class="form-group row">
          <label class="col-12 col-sm-3 col-form-label text-sm-left" for="merchant"> 商家 </label>
          <div class="col-12 col-sm-8 col-lg-6">
            <input class="form-control" id="merchant" name="merchant" type="text" placeholder="Placeholder text"
              value="{{record.merchant}}">
          </div>
        </div>
        {{!-- 金額 --}}
        <div class="form-group row">
          <label class="col-12 col-sm-3 col-form-label text-sm-left"> 金額 </label>
          <div class="input-group mb-3 col-12 col-sm-8 col-lg-6">
            <div class="input-group-prepend"><span class="input-group-text">$</span></div>
            <input class="form-control" type="number" name="amount" value="{{record.amount}}" required>
          </div>
        </div>

        <button type="submit" class="btn btn-send">Send</button>
      </form>
    </div>
  </div>
</div>